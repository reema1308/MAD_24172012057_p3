<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.005"
            app:srcCompat="@drawable/guni_pink_logo"
            tools:layout_editor_absoluteX="0dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            app:cardElevation="200dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            tools:layout_editor_absoluteX="197dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/name_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/reg_top_margin"
                    android:text="Name"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="182dp"
                    android:layout_height="42dp"
                    android:hint="Enter Name"
                    app:layout_constraintBaseline_toBaselineOf="@+id/name_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/phone_number_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/reg_top_margin"
                    android:text="Phone Number"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name_label"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="182dp"
                    android:layout_height="42dp"
                    android:hint="Enter Phone number"
                    app:layout_constraintBaseline_toBaselineOf="@+id/phone_number_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/phone_number_label" />

                <TextView
                    android:id="@+id/city_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/reg_top_margin"
                    android:text="City"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phone_number_label"
                    app:layout_constraintVertical_bias="0.067" />

                <EditText
                    android:id="@+id/city"
                    android:layout_width="182dp"
                    android:layout_height="42dp"
                    android:hint="Enter City"
                    app:layout_constraintBaseline_toBaselineOf="@+id/city_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/city_label" />

                <TextView
                    android:id="@+id/email_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/reg_top_margin"
                    android:text="Email"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/city_label"
                    app:layout_constraintVertical_bias="0.082" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="182dp"
                    android:layout_height="42dp"
                    android:hint="Enter Email"
                    app:layout_constraintBaseline_toBaselineOf="@+id/email_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/email_label" />

                <TextView
                    android:id="@+id/password_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/reg_top_margin"
                    android:text="Password"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/email_label"
                    app:layout_constraintVertical_bias="0.083" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="182dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="@dimen/reg_top_margin"
                    android:hint="Enter Password"
                    app:layout_constraintBaseline_toBaselineOf="@+id/password_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/password_label" />

                <TextView
                    android:id="@+id/confirm_password_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Confirm Password"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/password_label"
                    app:layout_constraintVertical_bias="0.171" />

                <EditText
                    android:id="@+id/confirm_password"
                    android:layout_width="182dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="@dimen/reg_top_margin"
                    android:hint="Enter Confirm Password"
                    app:layout_constraintBaseline_toBaselineOf="@+id/confirm_password_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/confirm_password_label" />

                <Button
                    android:id="@+id/register_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="44dp"
                    android:text="Register"
                    app:layout_constraintTop_toBottomOf="@+id/confirm_password_label" />

                <View
                    android:id="@+id/spacer"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/Login_btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:background="@color/login_btn_bg"
        android:textColor="@color/login_btn_text"
        android:textSize="18dp"
        app:layout_editor_absoluteX="246dp"
        app:layout_editor_absoluteY="620dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>